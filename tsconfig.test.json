{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "include": [
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/testing/internal/"
  ],
  "references": [
    { "path": "./tsconfig.src.json" },
    { "path": "./tsconfig.vite.json" }
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "lib": ["dom", "esnext"],
    "types": ["node"]
  }
}
